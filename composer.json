{
    "name": "ergosense/php-oaf",
    "require": {
        "psr/http-server-handler": "*",
        "psr/http-server-middleware": "*",
        "zendframework/zend-stratigility": "*",
        "zendframework/zend-diactoros": "*",
        "middlewares/fast-route": "^1.1",
        "middlewares/payload": "*",
        "php-di/php-di": "^6.0"
    },
    "scripts": {
        "server": "php -d max_execution_time=0 -S localhost:8080 -t public"
    },
    "autoload": {
        "psr-4": {
            "OAF\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "suggest": {
        "respect/validation": "Install respect/validation for helpful validation via OAF/validate()"
    }
}
